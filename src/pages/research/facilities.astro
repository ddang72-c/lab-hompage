---
import SectionLayout from "../../layouts/SectionLayout.astro";
import type { MarkdownInstance } from "astro";

const nav = [
  { label: "Research area", href: "/research/research-area/" },
  { label: "Facilities", href: "/research/facilities/" },
];

const modules = import.meta.glob<MarkdownInstance<any>>("/src/content/research/facilities.md");
const page = (await Promise.all(Object.values(modules).map((fn) => fn())))[0];
if (!page) throw new Error("Missing: /src/content/research/facilities.md");

const { Content, frontmatter } = page;
const t = frontmatter.title ?? "Facilities";
---

<SectionLayout title={t} sectionLabel="RESEARCH" navItems={nav} heroImage="/images/sub-hero.jpg">
  <h1>{t}</h1>
  <Content />
</SectionLayout>
