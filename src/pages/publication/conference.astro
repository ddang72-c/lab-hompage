---
import SectionLayout from "../../layouts/SectionLayout.astro";
import type { MarkdownInstance } from "astro";

type FM = {
  title?: string;
  year?: number;
  authors?: string;
  link?: string;
  logoImage?: string;
  logoUrl?: string;
};

const nav = [
  { label: "Journal", href: "/publication/journal/" },
  { label: "Conference", href: "/publication/conference/" },
];

const modules = import.meta.glob<MarkdownInstance<FM>>("/src/content/publication/conference/*.md");
const items = await Promise.all(
  Object.entries(modules).map(async ([path, loader]) => {
    const entry = await loader();
    const fm = entry.frontmatter ?? {};
    return { path, entry, fm };
  })
);

// 정렬: year 내림차순 → title 오름차순
items.sort((a, b) => {
  const ay = Number(a.fm.year ?? -1);
  const by = Number(b.fm.year ?? -1);
  if (ay !== by) return by - ay;

  const at = (a.fm.title ?? "").toString();
  const bt = (b.fm.title ?? "").toString();
  return at.localeCompare(bt);
});

// group by year
const byYear = new Map<number, typeof items>();
for (const it of items) {
  const y = Number(it.fm.year ?? 0);
  if (!byYear.has(y)) byYear.set(y, []);
  byYear.get(y)!.push(it);
}
const years = Array.from(byYear.keys()).sort((a, b) => b - a);

const metaLine = (fm: FM) => (fm.authors ?? "").toString();
const logoSrc = (fm: FM) => fm.logoImage || fm.logoUrl || "";
---

<SectionLayout
  title="Conference"
  sectionLabel="PUBLICATION"
  navItems={nav}
  currentLabel="Conference"
  heroSrc="/images/sub-hero.jpg"
>
  <h1>Conference</h1>

  {years.map((y) => {
    const list = byYear.get(y)!;

    return (
      <section class="pub-year">
        <div class="pub-year-left">{y}</div>

        <div class="pub-items">
          {list.map(({ fm }) => {
            const ls = logoSrc(fm);

            return (
              <div class="pub-item">
                <div style="display:flex; gap:14px; align-items:flex-start;">
                  {ls && (
                    <img
                      src={ls}
                      alt=""
                      style="width:70px; height:auto; object-fit:contain;"
                      loading="lazy"
                    />
                  )}

                  <div style="flex:1;">
                    <div class="pub-title">{fm.title}</div>
                    {metaLine(fm) && <div class="pub-meta">{metaLine(fm)}</div>}
                    {fm.link && (
                      <a class="pub-btn" href={fm.link} target="_blank" rel="noreferrer">
                        link
                      </a>
                    )}
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </section>
    );
  })}

  {items.length === 0 && <p class="muted">No conference entries yet.</p>}
</SectionLayout>
