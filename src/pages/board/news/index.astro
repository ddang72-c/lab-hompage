---
import SectionLayout from "../../../layouts/SectionLayout.astro";
import GalleryAlbum from "../../../components/gallery/GalleryAlbum.tsx";
import type { MarkdownInstance } from "astro";

type FM = Record<string, any>;

const toImageUrls = (fm: any): string[] => {
  const out: string[] = [];
  const push = (x: any) => {
    if (typeof x === "string" && x.trim()) out.push(x.trim());
  };
  const readList = (arr: any[]) => {
    for (const it of arr) {
      if (typeof it === "string") push(it);
      else if (it && typeof it === "object") push(it.photo ?? it.image ?? it.src ?? it.url);
    }
  };

  // ✅ 뉴스 컬렉션에서 쓰는 필드명이 달라도 최대한 다 받아오게
  if (Array.isArray(fm?.images)) readList(fm.images);
  if (Array.isArray(fm?.photos)) readList(fm.photos);
  if (Array.isArray(fm?.gallery)) readList(fm.gallery);
  if (Array.isArray(fm?.media)) readList(fm.media);

  // ✅ 단일 대표 이미지 필드(있으면 포함)
  push(fm?.cover);
  push(fm?.thumbnail);
  push(fm?.thumb);
  push(fm?.image);

  return Array.from(new Set(out));
};

const stripFrontmatter = (raw: string) => {
  // --- ... --- (frontmatter) 제거 후 남은 본문만 반환
  return raw.replace(/^---[\s\S]*?---\s*/m, "").trim();
};

// ✅ 여기만 gallery -> news 로 변경
const modules = import.meta.glob<MarkdownInstance<FM>>("/src/content/board/news/*.md");

const posts = await Promise.all(
  Object.entries(modules).map(async ([, loader]) => {
    const entry = await loader();
    const fm = entry.frontmatter ?? {};

    const title = (fm.title ?? "Untitled").toString();
    const dateStr = (fm.date ?? fm.published ?? fm.created ?? "").toString();
    const date = dateStr ? new Date(dateStr) : null;

    const images = toImageUrls(fm);
    const fit = (fm.fit ?? "auto").toString();

    const Content = entry.Content; // ✅ Decap BODY(본문)
    const hasBody = stripFrontmatter(entry.rawContent()).length > 0;

    return { title, date, images, fit, Content, hasBody };
  })
);

posts.sort((a, b) => {
  const ad = a.date ? a.date.getTime() : 0;
  const bd = b.date ? b.date.getTime() : 0;
  if (ad !== bd) return bd - ad;
  return a.title.localeCompare(b.title);
});

const fmt = (d: Date | null) => (d ? d.toISOString().slice(0, 10) : "");
---

<SectionLayout title="News">
  <style is:global>
    /* ✅ 갤러리 최종본과 동일한 레이아웃(가운데 폭 제한 + 내부는 왼쪽 정렬) */
    .news-wrap{
      max-width: 1180px;
      margin: 0 auto;
      padding: 0 18px;
    }

    .news-list{
      display: grid !important;
      row-gap: 100px !important;
    }

    .news-post{
      padding-bottom: 0;
      border-bottom: 0;
    }

    /* ✅ 제목은 중앙정렬 X → 사진 시작 라인과 동일하게 */
    .gpost-header{
      text-align: left;
      margin-bottom: 18px;
    }
    .gpost-title{
      margin: 0;
      font-size: 34px;
      line-height: 1.15;
      letter-spacing: -0.02em;
    }
    .gpost-date{
      margin-top: 10px;
      font-size: 15px;
      color: var(--muted, #6b7280);
    }
    .gpost-body{
      margin-top: 18px;
      font-size: 16px;
      line-height: 1.7;
      color: var(--text, #111827);
    }
    .gpost-body :global(p){
      margin: 0 0 10px 0;
    }
    .gpost-body :global(a){
      text-decoration: underline;
    }

    @media (max-width: 900px){
      .news-list{ row-gap: 100px !important; }
      .gpost-title{ font-size: 30px; }
    }
    @media (max-width: 520px){
      .news-wrap{ padding: 0 14px; }
      .news-list{ row-gap: 72px !important; }
      .gpost-title{ font-size: 26px; }
      .gpost-body{ font-size: 15px; }
    }
  </style>

  <div class="news-wrap">
    <div class="news-list">
      {posts.map((p) => (
        <article class="news-post">
          <header class="gpost-header">
            <h2 class="gpost-title">{p.title}</h2>
            {p.date && <div class="gpost-date">{fmt(p.date)}</div>}
          </header>

          {p.images.length > 0 && (
            <GalleryAlbum client:load images={p.images} fit={p.fit} />
          )}

          {p.hasBody && (
            <div class="gpost-body">
              <p.Content />
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</SectionLayout>
