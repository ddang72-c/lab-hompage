---
const { title = "Lab" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin: 0; }
      header { border-bottom: 1px solid #eee; padding: 18px 24px; }
      nav { display: grid; grid-template-columns: repeat(4, 1fr); gap: 24px; }
      nav h3 { margin: 0 0 8px 0; }
      nav a { display: block; color: #111; text-decoration: none; padding: 2px 0; }
      nav a:hover { text-decoration: underline; }
      main { padding: 24px; max-width: 1000px; margin: 0 auto; }
      .grid { display: grid; gap: 12px; }
      .card { border: 1px solid #eee; border-radius: 12px; padding: 14px; }
      .muted { color: #666; font-size: 14px; }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <div>
          <h3>People</h3>
          <a href="/people/professor">Professor</a>
          <a href="/people/students">Students</a>
          <a href="/people/alumni">Alumni</a>
        </div>
        <div>
          <h3>Research</h3>
          <a href="/research/research-area">Research area</a>
          <a href="/research/facilities">Facilities</a>
        </div>
        <div>
          <h3>Publication</h3>
          <a href="/publication/journal">Journal</a>
          <a href="/publication/conference">Conference</a>
        </div>
        <div>
          <h3>Board</h3>
          <a href="/board/gallery">Gallery</a>
          <a href="/board/news">News</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
